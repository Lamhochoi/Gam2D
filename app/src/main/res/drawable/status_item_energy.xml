<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5520C0FF"/> <!-- xanh dương nhạt phát sáng -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Nền chính -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2200AACC"/>
            <corners android:radius="6dp"/>
            <stroke android:width="1dp" android:color="#55FFFFFF"/>
        </shape>
    </item>
</layer-list>
