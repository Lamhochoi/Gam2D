<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main">

    <!-- Thanh trạng thái trên cùng -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/status_bar_bg"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="12dp">

        <!-- Energy -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/chip_energy"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/energy" />

            <TextView
                android:id="@+id/tvEnergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/30"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="6dp"/>

            <!-- Dấu cộng -->
            <ImageView
                android:id="@+id/btnAddEnergy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_add"
                app:tint="@android:color/white"/>
        </LinearLayout>

        <!-- Coin -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/chip_coin"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/coin" />

            <TextView
                android:id="@+id/tvCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="6dp"/>

            <!-- Dấu cộng -->
            <ImageView
                android:id="@+id/btnAddCoin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_add"
                app:tint="@android:color/white"/>
        </LinearLayout>

        <!-- Gem -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/chip_gem"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gem" />

            <TextView
                android:id="@+id/tvGem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="6dp"/>

            <!-- Dấu cộng -->
            <ImageView
                android:id="@+id/btnAddGem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_add"
                app:tint="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Nút cửa hàng -->
    <ImageButton
        android:id="@+id/btnShop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/statusBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:src="@drawable/shop"
        android:scaleType="fitCenter"
        android:contentDescription="Mở cửa hàng"
        android:elevation="8dp" />
    <!-- Nút bảng xếp hạng (góc trên bên trái, mới thêm) -->
    <ImageButton
        android:id="@+id/btnLeaderboard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/statusBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="@string/leaderboard"
        android:src="@drawable/ic_leaderboard"
        android:elevation="8dp" />

    <!-- Tiêu đề Game -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/robotomono_bold"
        android:shadowColor="#AA00FF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:text="OUTER SPACES"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- Menu nút chọn hành tinh -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Nút Sao Hỏa -->
        <Button
            android:id="@+id/btnEasy"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="SAO\nHỎA"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/robotomono_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_tech_m"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"/>

        <!-- Nút Khiêu Chiến -->
        <Button
            android:id="@+id/btnChallenge"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="KHIÊU\nCHIẾN"
            android:textSize="21sp"
            android:textStyle="bold"
            android:fontFamily="@font/robotomono_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_techc"
            android:elevation="8dp"/>

        <!-- Hàng chứa Sao Thủy và Sao Thổ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Nút Sao Thủy -->
            <Button
                android:id="@+id/btnMedium"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="SAO\nTHỦY"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/robotomono_bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_tech"
                android:layout_marginEnd="80dp"
                android:elevation="8dp"/>

            <!-- Nút Sao Thổ -->
            <Button
                android:id="@+id/btnHard"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/btn_tech_s"
                android:elevation="8dp"
                android:fontFamily="@font/robotomono_bold"
                android:text="SAO\nTHỔ"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>