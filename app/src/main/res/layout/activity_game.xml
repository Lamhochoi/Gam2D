<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GameView sẽ được add động trong GameActivity -->

    <!-- TextView hiển thị số coin -->
    <TextView
        android:id="@+id/tvCoin"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:text="0"
        android:textColor="#FFFF00"
        android:textSize="24sp" />

    <!-- Nút cài đặt (trái, trên cùng) -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="150dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/setting"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/btn_settings_desc"/>

    <!-- Nút nhạc nền (trái, giữa màn hình) -->
    <ImageButton
        android:id="@+id/btnMusic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_music_on"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/btn_music_desc"/>

    <!-- Nút hiệu ứng âm thanh (phải, giữa màn hình) -->
    <ImageButton
        android:id="@+id/btnSound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_sound_on"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/btn_sound_desc"/>

    <!-- Nút pause -->
    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_pause"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/btn_pause_desc"/>

</FrameLayout>